{
    "name": "clem/2023-advent-of-code",
    "description": "Advent of Code 2023",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "symfony/console": "^7.0",
        "ext-gmp": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "symfony/var-dumper": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "advent": "php src/advent.php",
        "test": "./vendor/bin/phpunit"
    }
}
